---
const { block } = Astro.props;
---
<section class="relative bg-gray-100">
  <img src={block.backgroundImage?.url} class="w-full h-64 object-cover" alt="" />
  <div class="absolute inset-0 flex flex-col md:flex-row items-center justify-center p-4">
    <div class="text-center md:text-left">
      <h1 class="text-4xl font-bold">{block.heading}</h1>
      <p>{block.subheading}</p>
    </div>
    {block.floatingImage && <img src={block.floatingImage.url} class="md:ml-6 w-48 h-48 object-cover" />}
  </div>
</section>
